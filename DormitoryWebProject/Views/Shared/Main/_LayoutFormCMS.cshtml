@using MvcSiteMapProvider.Web.Html
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>KTX UEH | @ViewBag.Title</title>
    <!-- Theme style -->
    @Styles.Render("~/assets/plugins/adminlte/css/adminlte.min.css")
    <!-- Font Awesome -->
    @Styles.Render("~/assets/plugins/fontawesome-free-5.13.0-web/css/all.min.css")
    <!-- Ionicons -->
    @Styles.Render("~/assets/plugins/ionicons-2.0.1/css/ionicons.min.css")
    <!-- Glyphicons -->
    @Styles.Render("~/assets/setup-foundation/home/css/glyphicons.css")
    <!--Setup Foundation-->
    @Styles.Render("~/assets/setup-foundation/home/css/general.css")
    <!-- Font -->
    @Styles.Render("https://fonts.googleapis.com/css?family=Roboto:400,700|Open+Sans:400,700")
    <!--Page Style-->
    @RenderSection("PageStyle", required: false)
    <style>
        .content-wrapper {
            font-family: Roboto !important;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper layout-fixed">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-light navbar-white">
            <!-- Left navbar links  -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link pt-1" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars fa-2x" id="sidebar_bar"></i></a>
                </li>
            </ul>
            <!-- Breadcrumb Link  -->
            <ul class="breadcrumb" id="breadcrumb_fix">
                <li class="breadcrumb-item"><i class="fas fa-home" style="color:#0099FF;"></i><span> </span>@Html.MvcSiteMap().SiteMapPath()</li>
            </ul>
            <!-- Title Center - Visible on Tablet and Mobile only  -->
            <h3 class="page-title-sm">@ViewBag.Title</h3>
            <h5 class="page-title-xs">@ViewBag.Title</h5>
            <div class="navbar-nav ml-auto">
                <!-- SEARCH FORM -->
                @Html.Partial("_HomeNavbarSearch")
                <!-- Right navbar links  -->
                <ul class="navbar-nav">
                    <!-- Messages Dropdown Menu  -->
                    @Html.Partial("_HomeNavbarMessage")
                    <!-- Notifications Dropdown Menu -->
                    @Html.Partial("_HomeNavbarNotification")
                </ul>
            </div>
        </nav>

        <!-- Main Sidebar Container  -->
        <aside class="main-sidebar sidebar-dark-purple elevation-4 accent-light" data-scrollbar-theme="true" data-scrollbar-auto-hide="true">
            <!-- Brand Logo  -->
            @Html.Partial("_HomeSidebarBrandLogo")

            <div class="sidebar">
                <!-- Sidebar User -->
                @Html.Partial("_HomeSidebarUser")
                @Html.Partial("_HomeSidebarSearch")
                <!-- Sidebar Menu  -->
                @Html.Partial("_HomeSidebarMenu")
            </div>
        </aside>

        <section class="content-wrapper">
            <section class="content-header">
                @ViewBag.formheader
            </section>
            <section class="content">
                @RenderBody()
            </section>
        </section>


        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                Version: XYZ, User role: <span id="user-type">Manager</span>
            </div>
            <strong>Copyright © 2020 <a href="#">UEH Dormitory</a>.</strong> All rights reserved.
        </footer>
    </div>
    <!-- jQuery library v3.5.1-->
    @Scripts.Render("https://code.jquery.com/jquery-3.5.1.min.js")
    <!-- Popper -->
    @Scripts.Render("~/assets/plugins/popper/umd/popper.min.js")
    <!-- Bootstrap 4  -->
    @Scripts.Render("~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js")
    <!-- AdminLTE App  -->
    @Scripts.Render("~/assets/plugins/adminlte/js/adminlte.min.js")
    <!-- Setup Foundation -->
    @Scripts.Render("~/assets/setup-foundation/home/js/setup-foundation.js")
    <!-- Page Script -->
    @RenderSection("PageScript", false)
</body>
</html>


