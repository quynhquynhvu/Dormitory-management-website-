<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/assets/plugins/fontawesome-free-5.13.0-web/css/all.min.css")
    <!-- CSS Bootstrap Library v3.4.1 -->
    @Styles.Render("~/assets/plugins/bootstrap-3.4.1/css/bootstrap.min.css")
    <!-- FontAwesome Icon -->
    @Styles.Render("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    <!-- Font -->
    @Styles.Render("https://fonts.googleapis.com/css?family=Roboto:400,700|Open+Sans:400,700")
    <!-- Page Style -->
    @RenderSection("PageStyle", required: false)
    <!-- Footer CSS -->
    @Styles.Render("~/assets/setup-foundation/welcome/css/Footer.css")
    <!-- Header CSS -->
    @Styles.Render("~/assets/setup-foundation/welcome/css/Header.css")
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Collapse Navigation -->
    <div id="my-hidden-nav" class="my-overlay-nav">
        <a href="javascript:void(0)" class="my-close-bt" onclick="closeMENU()">&times;</a>
        <div class="my-overlay-content">
            @Html.ActionLink("TRANG CHỦ", "Index", "Trangchu")
            @Html.ActionLink("SỰ KIỆN", "Index", "Sukien")
            @Html.ActionLink("LIÊN HỆ", "Index", "Lienhe")
            @Html.ActionLink("ĐĂNG NHẬP", "Login", "Account")
        </div>
    </div>
    <!-- Normal Navigation - Hide onscroll -->
    @Html.Partial("_WelcomeNorNavScroll")
    <!-- Normal Navigation - Fixed top -->
    @Html.Partial("_WelcomeNorNavFixed")
    <!-- Back to top Button -->
    <a id="back-top-bt" class="hvr-grow-shadow"><i class="fa fa-arrow-up" id="top-arrow"></i></a>
    @RenderBody()
    <footer>
        <div class="container-fluid my-footer">
            @Html.Partial("_WelcomeKTXAddress")
            @Html.Partial("_WelcomeCopyright")
            @Html.Partial("_WelcomeSocialLinks")
        </div>
    </footer>
    <!-- jQuery library v3.5.1-->
    @Scripts.Render("https://code.jquery.com/jquery-3.5.1.min.js")
    <!-- JS Bootstrap Library v3.4.1-->
    @Scripts.Render("~/assets/plugins/bootstrap-3.4.1/js/bootstrap.min.js")
    <!-- Hoverline -->
    @Scripts.Render("~/assets/plugins/sliding-line/scripts/hoverline.js")
    <!-- Setup Foundation -->
    @Scripts.Render("~/assets/setup-foundation/welcome/js/setup-foundation.js")
    @Scripts.Render("~/assets/setup-foundation/welcome/js/General.js")
    <!-- Page Script -->
    @RenderSection("PageScript", required: false)
</body>
</html>
