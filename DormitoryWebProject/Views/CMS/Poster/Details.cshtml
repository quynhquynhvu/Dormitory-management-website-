@using DormitoryWebProject.Extensions
@model DormitoryWebProject.Models.Poster

@{
    ViewBag.Title = "Details";
    ViewBag.formheader = "";
    Layout = "~/Views/Shared/Main/_LayoutFormCMS.cshtml";

}
<div class="card card-dark">
    <div class="card-header">
        <h3 class="card-title">Chi tiết Poster @Model.MaPoster</h3>
    </div>
    <div class="card-body">
        <div class="row justify-content-end">
            <a href="/Poster/Edit/@Model.MaPoster" class="btn btn-default btn-flat bg-indigo"><i class="ionicons ion-edit"></i> Chỉnh sửa</a>
            <a href="#" class="btn btn-default btn-flat bg-danger ml-1" data-toggle="modal" data-target="#deleteconfirmation"><i class="far fa-trash-alt"></i> Xóa</a>
            <div class="form-horizontal container">
                <div class="form-group row">
                    <label class="control-label col-md-2">@Html.DisplayNameFor(model => model.Caption)</label>
                    <div class="col-md-4">
                        @Model.Caption
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-2">@Html.DisplayNameFor(model => model.LastModified)</label>
                    <div class="col-md-4">
                        @Model.LastModified
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-md-2">@Html.DisplayNameFor(model => model.pictureUpload)</label>
                    <div class="col-md-4">
                        @HtmlExtensions.ShowImage(null, Model.picturePath)
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="card-footer">
        <a href="/Poster" class="btn btn-default bg-navy"><i class="ionicons ion-ios-undo-outline"></i> Trở về</a>
    </div>
</div>
<div class="modal fade" id="deleteconfirmation">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Xác nhận xóa?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/Poster/Delete/@Model.MaPoster" method="post" style="margin:0;">
                    @Html.AntiForgeryToken()
                    <div>
                        Are you sure you want to delete this item?
                    </div>
                    <div class="mt-3 text-right">
                        <button type="button" class="btn btn-secondary btn-flat" data-dismiss="modal" onclick="closeModalWindow(); return false;">
                            Không, hủy bỏ
                        </button>
                        <button type="submit" class="btn btn-danger" value="Delete" data-commit-action="delete" data-commit-id="@Model.MaPoster">
                            Xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



