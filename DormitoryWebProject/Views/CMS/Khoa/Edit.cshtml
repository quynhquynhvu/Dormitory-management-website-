@model DormitoryWebProject.Models.Khoa

@{
    ViewBag.Title = "Edit";
    ViewBag.formheader = "";
    Layout = "~/Views/Shared/Main/_LayoutFormCMS.cshtml";
}
@using (Html.BeginForm("Create", "Khoa", FormMethod.Post))
{
    <div class="card card-dark">
        <div class="card-header">
            <h3 class="card-title" style="font-weight:700">Chỉnh sửa chi tiết @Model.TenKhoa</h3>
        </div>
        <div class="card-body">
            <div class="container">
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaKhoa)

                    <div class="form-group row">
                        <label for="ktxFK" class="control-label col-md-2">@Html.DisplayNameFor(model=>model.TenKhoa)</label>
                        <div class="col-xl-4 col-md-6">
                            @Html.EditorFor(model => model.TenKhoa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenKhoa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a href="/Khoa" class="btn btn-default bg-navy"><i class="ionicons ion-ios-undo-outline"></i> Trở về</a>
            <button type="submit" class="btn btn-default bg-teal float-right" name="Save" value="Save"><i class="fa fa-check"></i> <span>Lưu</span></button>
        </div>
    </div>
}



