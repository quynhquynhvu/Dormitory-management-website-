@model DormitoryWebProject.Models.Khoa

@{
    ViewBag.Title = "Create";
    ViewBag.formheader = "";
    Layout = "~/Views/Shared/Main/_LayoutFormCMS.cshtml";
}
@using (Html.BeginForm("Create", "Khoa", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="card card-dark">
            <div class="card-header">
                <h3 class="card-title">Tạo dữ liệu khóa học</h3>
            </div>
            <div class="card-body container">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    @Html.LabelFor(model => model.TenKhoa, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenKhoa, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenKhoa, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="/Khoa" class="btn btn-default bg-navy"><i class="ionicons ion-ios-undo-outline"></i> Trở về</a>
                <button class="btn btn-default bg-warning float-right" name="Create" value="Create" type="submit"><i class="fa fa-check"></i> <span>Lưu</span></button>
            </div>
        </div>
    </div>
}