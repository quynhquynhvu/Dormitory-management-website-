<div class="row">
    <div class="col-md-12">
        <div class="card card-warning my-card">
            <!-- Card Header -->
            <div class="card-header">
                <h3 class="card-title title d-none d-sm-block">Thông tin chung</h3>
                <p class="card-title title d-block d-sm-none f-title-resp">Thông tin chung</p>
                <!-- Card Button -->
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="card-refresh" data-source="widgets.html" data-source-selector="#card-refresh-content" data-load-on-init="false"><i class="fas fa-sync-alt"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="maximize"><i class="fas fa-expand"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                </div>
            </div>

            <div class="card-body row clearfix">
                @Html.Partial("_ThongtinchungHethong")
                @Html.Partial("_ThongtinchungThongke")
                @Html.Partial("_ThongtinchungDieuhuong")
            </div>

        </div>
    </div>
</div>
