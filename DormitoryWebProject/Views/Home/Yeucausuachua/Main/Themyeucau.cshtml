
@{
    ViewBag.Title = "Thêm yêu cầu sửa chữa";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm yêu cầu</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin chung</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form role="form">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label for="inputID">Tên người yêu cầu</label>
                                        <input type="text" id="inputName" class="form-control" value="">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputID">Ngày gửi yêu cầu</label>
                                        <input type="text" id="inputName" class="form-control" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- textarea -->
                                    <div class="form-group">
                                        <label for="inputID">MSSV</label>
                                        <input type="text" id="inputName" class="form-control" value="">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputID">SĐT</label>
                                        <input type="text" id="inputName" class="form-control" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputName">Phòng</label>
                                        <input type="text" id="inputName" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- radio -->
                                    <div class="form-group">
                                        <label for="inputName">Ký túc xá</label>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="radio1">
                                            <label class="form-check-label">KTX135</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="radio1" checked>
                                            <label class="form-check-label">KTX4345</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- select -->
                                    <div class="form-group">
                                        <label>Trạng thái</label>
                                        <select class="form-control">
                                            <option>Mới</option>
                                            <option>Đang phê duyệt</option>
                                            <option>Đang sửa chữa</option>
                                            <option>Hoàn tất</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputID">Mã yêu cầu</label>
                                        <input type="text" id="inputName" class="form-control" value="">
                                    </div>
                                </div>
                            </div>
                            <!-- text input -->
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea id="inputDescription" class="form-control" rows="4"></textarea>
                            </div>

                            <div class="col-12">
                                <a href="@Url.Action("Danhsachsuachua","Yeucausuachua")" class="btn btn-secondary">Cancel</a>
                                <input type="submit" value="Save" class="btn btn-success float-right">
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <br />
    </section>
    <!-- /.content -->
</div>

