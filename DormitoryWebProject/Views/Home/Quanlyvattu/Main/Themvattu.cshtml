
@{
    ViewBag.Title = "Thêm vật tư";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm vật tư</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <form>
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin chung</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName">Tên vật tư</label>
                                <input type="text" id="inputName" class="form-control" value="">
                            </div>
                            <div class="form-group">
                                <label for="inputID">Mã vật tư</label>
                                <input type="text" id="inputName" class="form-control" value="">
                            </div>
                            <div class="form-group">
                                <label for="inputNumber">Số lượng</label>
                                <input type="number" id="inputNumber" class="form-control" value="">
                            </div>
                            <div class="form-group">
                                <label for="inputDVT">ĐVT</label>
                                <input type="text" id="inputDVT" class="form-control" value="">
                            </div>
                            <div class="form-group">
                                <label for="inputValue">Giá trị</label>
                                <input type="number" id="inputValue" class="form-control" value="">
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <div class="col-md-6">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Phân loại</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputStatus">Loại</label>
                                <select class="form-control custom-select">
                                    <option selected disabled>Select one</option>
                                    <option>L1</option>
                                    <option>L2</option>
                                    <option selected>L3</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="inputName">Nhãn hiệu</label>
                                <input type="text" id="inputName" class="form-control" value="">
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Ảnh vật tư</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputEstimatedDuration">Hình ảnh minh họa</label>
                                <input type="file" class="form-control-file" id="exampleFormControlFile1">
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <a href="QLVT.html" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Save" class="btn btn-success float-right">
                </div>
            </div>
        </form>
        <br />
    </section>
    <!-- /.content -->
</div>

