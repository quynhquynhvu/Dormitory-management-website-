
@{
    ViewBag.Title = "Tạo phiếu giặt ủi";
}
@section PageStyle{
    <!-- DataTables -->
    <link href="~/assets/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/assets/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
}
<!-- Content Wrapper -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <br />

    <!-- Main content -->
    <section class="content">
        <form>
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Tạo phiếu giặt</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-sm-3 control-label">ID</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-sm-3 control-label">KTX</label>
                                    <div class="col-sm-8">
                                        <div class="form-select-list">
                                            <select class="form-control custom-select-value">
                                                <option>135A</option>
                                                <option>43-45</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-sm-3 control-label">MSSV</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-sm-3 control-label">Tên sinh viên</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-sm-3 control-label">Ngày nhận đồ</label>
                                    <div class="col-sm-8">
                                        <input type="datetime-local" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-sm-3 control-label">Ngày trả đồ</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" value="mm/dd/yyyy" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-sm-3 control-label">Số lượng</label>
                                    <div class="col-sm-8">
                                        <input type="number" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-sm-3 control-label">Đơn giá</label>
                                    <div class="col-sm-8">
                                        <div class="form-select-list">
                                            <select class="form-control custom-select-value">
                                                <option>10,000</option>
                                                <option>15,000</option>
                                                <option>20,000</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-sm-3 control-label">Thành tiền</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-sm-3 control-label">Trạng thái</label>
                                    <div class="col-sm-8">
                                        <div class="form-select-list">
                                            <select class="form-control custom-select-value">
                                                <option>Tiếp nhận</option>
                                                <option>Đang giặt</option>
                                                <option>Đã giặt</option>
                                                <option>Đã giao đồ</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <input type="submit" value="Save" class="btn btn-success">
                                <a href="@Url.Action("Danhsachgiatui","Home")" class="btn btn-secondary">Cancel</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </form>
    </section>
</div>

@section PageScript{
    <!-- DataTables -->
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
            $('#dtBasicExample').mdbEditor({
                mdbEditor: true
            });
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}