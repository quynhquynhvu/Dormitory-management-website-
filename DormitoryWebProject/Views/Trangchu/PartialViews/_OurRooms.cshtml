@using DormitoryWebProject.Models
@using System.Globalization
@model IEnumerable<DormitoryWebProject.Models.ChiTietKTX> 
@{
    int count = 0;
    ChiTietKTX chitiet1 = new ChiTietKTX();
    ChiTietKTX chitiet2 = new ChiTietKTX();
    foreach (var item in Model)
    {
        count++;
        if (count == 1)
        {
            chitiet1 = item;
        }
        else
        {
            chitiet2 = item;
        }
    }
}
@section PageScript{
    <script>
        $(function () {
            $(".my-rating").rating();
        });
        $(".my-rating").rating({
            starCaptions: function (val) {
                if (val < 3.5) {
                    return val + ' Stars';
                }
                else if (val >= 4.5) {
                    return 'Brilliant'
                }
                else if (val >= 3.5) {
                    return 'Awesome'
                }
            }
        });
    </script>
    }
